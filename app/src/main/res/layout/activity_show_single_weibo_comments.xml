<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--用户名称头像时间顶层布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_comments_iv_userIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_com_sina_weibo_sdk_login_button_with_frame_logo_normal" />
        <!--微博用户名称和时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_comments_tv_userID"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/vpi__background_holo_dark"
                android:gravity="center_vertical"
                android:text="用户名称XXX"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/id_comments_tv_timedate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1 min ago"
                android:textColor="#949494"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/id_comments_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingEnd="8dp"
        android:paddingStart="56dp"
        android:text="评论正文内容，评论正文内容。"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/id_comments_tv_nocomment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="No Comments Yet."
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>

